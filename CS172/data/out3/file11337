				jQuery(window).resize(function(){
					clearTimeout(sliderresizetimeout);
					sliderresizetimeout = setTimeout(function(){
							resizeslider(tcthefacts, '#carousel-thefacts .touchcarousel-item', 1024, 1366);			resizeslider(tcfaculty, '#carousel-faculty .touchcarousel-item', 1024, 1366);
						}, 100);
				});	
			
