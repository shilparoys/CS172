    <section id="assignment" class="container assignment"> 
     <figure> 
      <div class="">
       <div class="video-container">
        <iframe allowfullscreen="true" title="YouTube video player" class="youtube-player" type="text/html" width="720" height="435" src="//www.youtube.com/embed/iOyZA8FDUYs?rel=0&amp;showinfo=1&amp;wmode=transparent" frameborder="0"></iframe>
