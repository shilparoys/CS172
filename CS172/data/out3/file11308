				});
						
				jQuery(function($) {
					tcfaculty = $('#carousel-faculty').touchCarousel({			
						itemsPerMove: 1,
						pagingNav: true,
						snapToItems: true,	
						scrollbar: false,
						scrollbarAutoHide: true,
						scrollbarTheme: 'dark',	
						scrollToLast: false,
						loopItems: true,
						pagingNavControls: true,
						directionNav: true,
						directionNavAutoHide: false,
						autoplay: false,
