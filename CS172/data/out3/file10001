     <div id="featuredStation"> 
      <div class="sideHeading">
       Featured Station
      </div> 
      <div class="content"> 
       <h3 style="margin-bottom: 3px">T58A</h3> Grand View Acres, VA, USA 
       <br>
       <br> 
       <img style="width: 175px" class="photoCenter" src="http://anf.ucsd.edu/cacheimages/station_photos/T58A_top_pick_8571102302.jpg" alt="Station Photo"> 
       <img class="photoCenter" src="http://maps.google.com/maps/api/staticmap?center=36.9454,-78.5338&amp;zoom=4&amp;size=175x175&amp;maptype=roadmap&amp;markers=color:blue|36.9454,-78.5338&amp;sensor=false&amp;key=ABQIAAAAP28NUn0El9u6czmlS4XN1RRhiHKqT7kxkRg1cRlrAHTEBMYvwhQKsTVk872sFonjAOiVXly18iF0Sw" alt="Station Location"> 
      </div> 
     </div>
     <!-- end featuredStation --> 
     <div class="separator">
      <img src="/static/images/backgrounds/separator.gif" alt="">
     </div> 
    </div>
