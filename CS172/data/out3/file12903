 <head> 
  <title>Student Address Information Login</title> 
  <script>
     function verifySID () {
        var sid=document.addrLogin.sid.value;
        var pin=document.addrLogin.pin.value;
        if (sid.length!=9){
          alert("A nine character SID is required");
          return false

        }else{
        if (pin.length<4){
          alert("You must enter a 4 to 6 digit PIN.");
          return false;
        } }
        document.addrLogin.submit();
        return true;
    }
function clearForm(){
   document.addrLogin.sid.value="";
   document.addrLogin.pin.value="";
}
    </script> 
 </head> 
 <body bgcolor="#FFFFFF" onload="clearForm();
   document.addrLogin.sid.focus()" onunload="clearForm()" ;=""> 
  <center> 
   <h3><font color="#006600" size="4" face="Times New Roman"><b>Green River Community College</b></font></h3> 
   <font face="Arial, Helvetica, Sans-Serif"> <h3><font size="5">Address Information Login</font></h3></font> 
   <form method="POST" action="https://grcc.greenriver.edu/cgi-bin/rqserver.exe" name="addrLogin"> 
    <input type="hidden" name="request" value="saddrchg"> 
    <br>
    <table border="0" cellspacing="10" cellpadding="0"> 
     <tbody>
      <tr> 
       <td><b>Type your Student Identification Number (SID).</b></td> 
       <td><input type="password" name="sid" size="9" maxlength="9" value=""></td> 
      </tr>  
      <tr> 
       <td><b>Type your Personal Identification Number (PIN).</b></td> 
       <td><input type="password" name="pin" size="9" maxlength="6" value=""></td> 
      </tr> 
     </tbody>
    </table> 
    <input type="button" value="View My Address" onclick="verifySID()">  
   </form> 
   <p> <a href="http://www.greenriver.edu/online-services.htm">Back to Main Menu</a> </p>
