  <script>
/* Adjust the height of the iframe to fit completely with viewport */
    function adjust() {
    var width, height;
    if (document.all) {
      width = 960;
      height = document.documentElement.offsetHeight;
    } else {
      width = 960;
      height = window.innerHeight;
    }
    var forum_iframe = document.getElementById('forum_embed');
    forum_iframe.height = Math.max(height - 150, 300);
    forum_iframe.width = Math.max(width - 50, 800);
    }

    /* Instantiate instance of help center forum embed and readjust viewport as needed */
    var init = function() {
    var i = window.location.href.indexOf("#");
    var parentUrl = (i == -1 ? encodeURIComponent(window.location.href) : encodeURIComponent(window.location.href.substring(0, i)));
    var forumUrl = 'https://groups.google.com/a/googleproductforums.com/forum/embed/?place=forum/google-plus-discuss&showsearch=true&showtabs=false&hl=en&fragments=true' + (parentUrl ? ("&parenturl=" + parentUrl) : "");
    if (i != -1) {
      forumUrl += "#" + window.location.href.substring(i + 1);
    }
    document.getElementById('forum_embed').src = forumUrl;
    adjust();
    }();
    window.onresize = adjust;
    </script>  
