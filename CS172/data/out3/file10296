                 <div class="field-items"> 
                  <div class="field-item odd"> 
                   <img class="imagefield imagefield-field_bio_image" width="100" height="150" alt="" src="http://www.ldeo.columbia.edu/files/bio/richards_p.jpg?0"> 
                  </div> 
                 </div> 
                </div> 
                <div class="field field-type-text field-field-address-street1"> 
