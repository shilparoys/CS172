			function centersliders(slider, wrapper){
				hh = $('#carousel-'+slider+' .touchcarousel-wrapper').height();
				$('#carousel-'+slider+' .touchcarousel-item '+wrapper).each(function(){
					t = $(this);
					t.css('padding-top',(hh-t.height())/2);
				})			
