								var active = $("#tabs1521762505").tabs( "option", "active" );
								var total = $("#tabs1521762505 ul:first li").length;
								if(ev.direction == "right"){ //finger from left to right. open left panel
									if (active > 0 ) $("#tabs1521762505").tabs( "option", "active", (active - 1) );
								}
								if(ev.direction == "left"){//finger from right to left. open right panel
									if (active < total ) $("#tabs1521762505").tabs( "option", "active", (active + 1) );
								}
								return false;
							});
					}
				});
