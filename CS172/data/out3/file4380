   <script type="text/javascript" src="http://images.apple.com/metrics/scripts/s_code_h.js"></script> 
   <script type="text/javascript">

s.pageName=AC.Tracking.pageName()+" (us)";
s.channel="www.us.hotnews";


if (AC && typeof(AC.onDOMReady) === 'function' && typeof(AC.Element) === 'object' && typeof(AC.Storage) === 'object') {
	AC.onDOMReady(function() {

		function findDown(elem, nodeName) {
			if (!AC.Element.isElement(elem)) {
				return false;
			}

			var matched;

			var dir = 'nextSibling';

			while ((elem = elem[dir]) && elem.nodeType !== 9) {
				if (elem.nodeName === nodeName.toUpperCase()) {
					matched = elem;
					break;
				}
			}
			return matched;
		}

		function trackNav(link,loc) {
			AC.Element.addEventListener(link, 'mouseup',function(){
				var propURL = findDown(link, 'img');
				if(propURL){
					propURL = propURL.getAttribute('src');
					propURL = propURL.substring(propURL.lastIndexOf('/')+1, propURL.length);
				}
				if(propURL == null){
					propURL = link.getAttribute('href');
				}
				if (propURL != null) {
					var prefix='p@';
					AC.Tracking.trackClick({
						prop3: prefix + propURL + ' - ' + AC.Tracking.pageName()
					}, this, 'o', prefix + propURL + ' - ' + AC.Tracking.pageName());
				}
				
				//navigation tracking
				AC.Storage.setItem('s_nav',loc,'0');
			});
		}
		
		var promoLinks = AC.Element.selectAll('#promos a');
		promoLinks.forEach(function(link){
			trackNav(link,'promos');
		});
	});
}


/************* DO NOT ALTER ANYTHING BELOW THIS LINE ! **************/
var s_code = s.t();</script> 
