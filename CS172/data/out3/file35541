    $(document).ready( function() {
      //header - resize color wheel graphic div to same height as container
      $("#graphic").css('height',$(".polymath").innerHeight());
      //features click
      $("#featurenav a").on("click", function(e) {
        e.preventDefault();
        if($(this).hasClass("selected")==false) {
          var index = $("#featurenav a").index(this);
          $("#featurenav a.selected").removeClass("selected");
          $(this).addClass("selected");
          $("#features .feature.selected").removeClass("selected").css( { 'top': '-2000px', 'visibility':'hidden'} );
          $(".feature").eq(index).addClass("selected").css( { 'top': '0px', 'visibility':'visible'} );
        }
        player1.pauseVideo();
        player2.pauseVideo();
      });
      
    });
  </script> 
