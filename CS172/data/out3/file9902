  <script type="text/javascript">
    // this one requires the value to be the same as the first parameter
	$.validator.methods.equal = function(value, element, param) {
		return value == param;
	};
    $().ready(function() {
    
      $("#lib-appointment").validate({
        rules: {
		  		spmchck: {required:true,equal: 3},
		  		email: {required: true, email:true}
		 },
		  
		  messages: {
		  		spmchck: "Please type in the correct answer"
		}
      });
	
		//Hide div w/id
	   	$(".extra").hide();
	   	$(".name_wrap").hide();
	   	
	   	//Reset
	   	$("#foli1-5 #num_attendees").val('-- Please choose --');
	   
	
		// Add onclick handler to checkbox w/id
	   $("#enroll-grcc").click(function(){
		
		// If checked
		if ($("#enroll-grcc").is(":checked"))
		{
			//show the hidden div
			$("#enroll-info").show("fast");
		}
		else
		{	   
			//otherwise, hide it 
			$("#enroll-info").hide("fast");
		}
	  });
	  
	  // Add onclick handler to checkbox w/id
	   $("#transfer").click(function(){
		
		// If checked
		if ($("#transfer").is(":checked"))
		{
			//show the hidden div
			$("#transfer-info").show("fast");
		}
		else
		{	   
			//otherwise, hide it 
			$("#transfer-info").hide("fast");
		}
	  });
	  
	  // Add onclick handler to checkbox w/id
	   $("#career-training").click(function(){
		
		// If checked
		if ($("#career-training").is(":checked"))
		{
			//show the hidden div
			$("#career-info").show("fast");
		}
		else
		{	   
			//otherwise, hide it 
			$("#career-info").hide("fast");
		}
	  });
	  
	  	// When a dropdown selection is made
		$("#foli1-5 #num_attendees").change(function() {

	
		$(".name_wrap").slideUp().find("input").removeClass("active_name_field");
		
		switch ($("#foli1-5 #num_attendees option:selected").text()) {
			
		case '3':
	
		$("#attendee_1_wrap").slideDown().find("input").addClass("active_name_field");
		$("#attendee_2_wrap").slideDown().find("input").addClass("active_name_field");
		$("#attendee_3_wrap").slideDown().find("input").addClass("active_name_field");
		break;
			
		case '4':
		
		$("#attendee_1_wrap").slideDown().find("input").addClass("active_name_field");	
		$("#attendee_2_wrap").slideDown().find("input").addClass("active_name_field");
		$("#attendee_3_wrap").slideDown().find("input").addClass("active_name_field");
		$("#attendee_4_wrap").slideDown().find("input").addClass("active_name_field");
		break;
		
		case '5':	
		$("#attendee_1_wrap").slideDown().find("input").addClass("active_name_field");	
		$("#attendee_2_wrap").slideDown().find("input").addClass("active_name_field");	
		$("#attendee_3_wrap").slideDown().find("input").addClass("active_name_field");
		$("#attendee_4_wrap").slideDown().find("input").addClass("active_name_field");	
		$("#attendee_5_wrap").slideDown().find("input").addClass("active_name_field");
		break;
		
		case '6':	
		$("#attendee_1_wrap").slideDown().find("input").addClass("active_name_field");	
		$("#attendee_2_wrap").slideDown().find("input").addClass("active_name_field");	
		$("#attendee_3_wrap").slideDown().find("input").addClass("active_name_field");
		$("#attendee_4_wrap").slideDown().find("input").addClass("active_name_field");	
		$("#attendee_5_wrap").slideDown().find("input").addClass("active_name_field");
		$("#attendee_6_wrap").slideDown().find("input").addClass("active_name_field");
		break;
		}

	  });
});
</script> 
