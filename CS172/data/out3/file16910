  <script type="text/javascript" src="scripts/jquery-min.js"></script> 
  <script type="text/javascript" src="scripts/slick.js"></script> 
  <script type="text/javascript">
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

		ga('create', 'UA-55448516-1', 'auto');
		ga('send', 'pageview');	
		$(document).ready(function(){
			var link, actionButton, beforeChange;
			/*	Called before a new slide appears
			*		Show the button on the arriving slide and hide on departing slide
			*		Prevents tabbing from interfering with the slide action
			*/
			beforeChange = function(slide, currentIndex, targetIndex){
				$(this.$slides[currentIndex]).find('button').hide();
				$(this.$slides[targetIndex]).find('button').show();
			};

			//	If JavaScript is enabled:
			//	...set height limits on certain content containers that are managed by JavaScript
			$('#content-area').addClass("constrain-height");
			//	...show the Pause/Play buttons
			$('.featured-control').show();
			//	...replace the "view more reports" link (Recently Released Reports) with a button
			link = $('a.view-more-link');
			actionButton = $('<button class="view-more-button">' + $(link).text() + '</button>');
			$(actionButton).bind('click', function(){
				ga('send', {
					'hitType': 'event',
					'eventCategory': 'featured-item',
					'eventAction': 'click',
					'eventLabel': $(link).attr('href')});
				window.location = $(link).attr('href');
			});
			$(link).after(actionButton).remove();

			/*	Invoke the Slick Slider
			*		Adding the 'js' class on the slider makes slight alterations
			*		to each slide's appearance when JavaScript is running
			*/
			$('.featured-carousel').slick({
				accessibility: true,
				autoplay: true,
				arrows: false,
				dots: true,
				autoplaySpeed: (10000),
				pauseOnHover: false,
				onBeforeChange: beforeChange
			}).addClass("js");

			// Set the click action on the Pause/Play button
			$('.featured-control img').bind('click', function(){
				if ($(this).hasClass('play')) {
					$('.featured-carousel').slickPlay();
					$('.featured-control .play').hide();
					$('.featured-control .pause').show();
				}
				else 
				{
					$('.featured-carousel').slickPause();
					$('.featured-control .pause').hide();
					$('.featured-control .play').show();
				}
			})

			// Manage the content of each slide
			$('div.slide').each(function(){
				var slideTitle = $(this).find('h3');
				var slideImage = $(this).find('img');
				var slideSummary = $(this).find('p.summary');
				var actionDiv = $(this).find('div.action');
				var link = $(actionDiv).find('a');
				var summaryText;
				var rePunctuation = new RegExp("\W");
				var slideContentHeight = 320;
				var minimumOptimalContentHeight = 260;
				var longPole;

				// Replace action hyperlinks with buttons
				if (link.length) {
					var actionButton = $('<button class="action-button">' + $(link).text() + '</button>');
					$(actionButton).bind('click', function(){
						if ($(link).attr('onclick') != undefined) alert("You are now leaving the VAOIG website.");
						ga('send', {
							'hitType': 'event',
							'eventCategory': 'featured-item',
							'eventAction': 'click',
							'eventLabel': $(link).attr('href')});
						window.location = $(link).attr('href');
					});
					$(link).remove();
					$(actionButton).hide(); // buttons are hidden on inactive slides to prevent tabbing problems
					$(actionDiv).append(actionButton);
				}

				/*	Manage the content height
				*		If the image and h3 height are over 320 then hide the image
				*		If the summary text is less than 3/4 the height of the image,
				*		apply a larger formatting to the summary text
				*/
				if (slideTitle && slideImage) {
					if (($(slideTitle).height() + $(slideImage).height()) > slideContentHeight) {
						$(slideImage).hide();
					}
					else if ($(slideSummary).height()/$(slideImage).height() < 0.75) {
						// if the summary text height is less than 75% of the
						// image height, switch to the larger font size
						$(slideSummary).addClass('larger')
					}
				}

				/*	Truncate the content of the summary if necessary until it fits
				*		within its container
				*/
				if (slideTitle && slideSummary) {
					while (($(slideTitle).height() + $(slideSummary).height()) > slideContentHeight) {
						summaryText = $(slideSummary).text()
						
						// Trim the last word (everything to the right of the last space)
						summaryText = summaryText.substring(0, summaryText.lastIndexOf(" "))
						
						// Trim off any punctuation except a period
						var testCharacter = summaryText.charAt(summaryText.length - 1)

						// Add ellipsis points if necessary 
						if (testCharacter !== ".") {
							// Remove any trailing punctuation
							summaryText = summaryText.replace(/[^A-Za-z0-9\.]*$/, "")
							summaryText += "..."
						}
						$(slideSummary).text(summaryText);
					}
				}

				//	Last effort to adjust formatting larger. 
				longPole = $(slideImage).height() > $(slideSummary).height() ? $(slideImage).height() : $(slideSummary).height();
				if  ($(slideTitle).height() + longPole < minimumOptimalContentHeight) {
					$(slideTitle).addClass('larger')
					$(slideSummary).addClass('larger')
				}
			});


			// 	Remove the first (blank) slide
			//	Enable the button in the first slide and show it
			$('.featured-carousel').slickRemove(0);
			$($('.featured-carousel')[0].slick.$slides[0]).find('button').show();
		});
	</script> 
  <script id="_fed_an_ua_tag" language="javascript" src="//cdn.eo.va.gov/vendor/gsa/analytics/UA/1.0/universal-federated-analytics.min.js?ver=true&amp;agency=VA&amp;pua=UA-33523145-1"></script>  
