$(document).ready(function(){
	$("#right_top_news").css("min-height","251px");
	$("#right_top_news p.more").css("margin-top","1px");
	$("#right_top_news div").css({"height":"251px","overflow":"hidden"});
	var title = $("#right_top_news div table tr:nth-child(2) td").text();
	var con = $("#right_top_news div table tr:nth-child(3) td").text();
	$("#right_top_news div table tr:nth-child(2) td").text("");
	$("#right_top_news div table tr:nth-child(3) td").text("");
	$("#right_top_news div table tr:nth-child(2) td").append("<div style='height:92px;overflow:auto'><h2>"+title+"</h2>"+con+"</div>");
	$("#right_top_news div table tr:nth-child(3) td").remove();
	$("#right_top_news").after("<div id='player5' style='display:block;width:230px;height:160px;margin-top:0px'><div id='loadPlayer5'><img src='/tour/tour_images/ct_eng_thumb3.jpg'/></div></div><div style='margin-top:274px;text-align:right;font-size:12px;font-family:times new roman;'><a href='http://www.umac.mo/about_UM/about_UM_video.html' target='_blank' id='tourvideos'>More Videos <img src='/revamp2012/images/more.png'/></a></div>");


$("#loadPlayer5").click(function(){loadPlayer5();});
$("#loadPlayer5").trigger("click");


function loadPlayer5(){	
  	flowplayer("player5", "http://www.umac.mo/detail/js/flowplayer/flowplayer-3.2.18.swf",{
	   playlist: [
     				{
         				url: '/tour/tour_images/ct_eng_thumb2.jpg',
         				scaling: 'fit'
     				},
     				{
        				url: 'http://eod.umac.mo/ipr/ct_eng.flv',
       					autoPlay: true,
        				autoBuffering: false,
						scaling: 'scale',
					}
		   		 ],
		canvas: {
       				background: '#000000',
        			backgroundGradient: 'none',
				},
		onLastSecond: function() {
			$f().play();
		}, 
		onStart: function() {
			$f().mute();
		}
  });
}
});
</script> 
