var url = document.URL;
var split = url.split("/");
var link;
if(split[2]=="news.umac.mo"){
	var docname = split[split.length-1].split(".");
	if(docname[0]=="newsArchive"){
		link="http://mobile.umac.mo/en/news/";
	}else if(docname[0]=="eventHome"){
		link="http://mobile.umac.mo/en/calendar/";
	}else if(docname[0]=="umVideos"){
		link="http://mobile.umac.mo/en/video/";
	}else{
		link="http://mobile.umac.mo/";
	}
}else if(split[2]=="www.umac.mo"){
	var docname = split[split.length-1].split(".");
	if(docname[0]=="tour_UM_video"||docname[0]=="about_UM_video"||docname[0]=="admissions_UM_video"||docname[0]=="studentlife_UM_video"||docname[0]=="continuingeducation_UM_video"){
		link="http://mobile.umac.mo/en/video/";
	}else if(docname[0]=="about_UM_campus_map"||docname[0]=="admissions_campus_map"||docname[0]=="student_life_campus_map"||docname[0]=="continuing_education_campus_map"||docname[0]=="tour_campus_map"){
		link="http://mobile.umac.mo/en/campus/";
	}else if(docname[0]=="academics"){
		link="http://mobile.umac.mo/en/faculty/";
	}else if(docname[0]=="administrations"){
		link="http://mobile.umac.mo/en/administration/";
	}else if(docname[0]=="about_UM_facilities"||docname[0]=="admissions_facilities"||docname[0]=="student_life_facilities"||docname[0]=="continuing_education_facilities"||docname[0]=="tour_facilities"||docname[0]=="students_facilities"){
		link="http://mobile.umac.mo/en/diningoutlet/";
	}else{
		link="http://mobile.umac.mo/";	
	}
}


