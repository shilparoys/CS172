$(window).bind('keydown', function(event) {
    if (event.ctrlKey || event.metaKey) {
        switch (String.fromCharCode(event.which).toLowerCase()) {
        case 'p':
        		var printurl = "/local/2015/02/25/South-Sudan-war-survivor-tells-of-horror-in-Owens-talk.print";
            event.preventDefault();
           	window.open(printurl,'South Sudan war survivor tells of horror in Owens talk ');
            break;
        }
    }
});
