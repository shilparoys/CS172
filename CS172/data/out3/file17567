            function my_yq_init() {
                //may be cleaner to populate server side
                var title = "South Sudan war survivor tells of horror in Owens talk ";
                var categories = "Our-Town-Home-Perrysburg";
                var content_id = "20150224221";
                var description = "John Dau and his brothers were asleep when the sounds of whistling bullets and booming bombs ripped through their village in South Sudan in 1987. It was the start of the Second Sudanese Civil War. Sounds of rapid gunfire filled the air, houses were";
				var image_link = "http://www.toledoblade.com/image/2015/02/25/220x116_a220-116_cCM_ca724,38,1378,980_cT/WebPbg-GenocideTalk24-Dau.jpg";
                var pub_date = "2015-02-25 00:00:00Z";
				var canon_href = "http://www.toledoblade.com/local/2015/02/25/South-Sudan-war-survivor-tells-of-horror-in-Owens-talk.html";
				
				var new_pub_date = pub_date.replace(/-/g, "/");
				var new_pub_date = new Date(new_pub_date);
				var todaysDate = new Date();
				if (new_pub_date <= todaysDate) {
                    Yq.observe({
						'domains': 'http://www.toledoblade.com',
                        'observe': [{
                                'type': 'node',
                                'name': content_id,
                                'title': title, //required for 'is_panel_builder'
                                'categories': categories,
                                'description': description,
                                'image': image_link,
                                'create_date': pub_date
                            }],
                        //fetches 6 recommendations that can come from any site running the observe observable, with no category restrictions and returning content_id, url and title
                        'suggest': [{'type': 'node', 'count': 6, 'categories': [], 'is_panel_detailed': 'true', 'isAllClientDomains': 'false'}],
                        'alt_href': canon_href
                    }, on_yq_suggest);
                }
                else { //if identifier not found (i.e. non-content page) do this...
                    Yq.observe({
						'domains': 'http://www.toledoblade.com',
                        //fetches 6 recommendations that can come from any site running the observe observable, with no category restrictions and returning content_id, url and title
                        'suggest': [{'type': 'node', 'count': 6, 'categories': [], 'is_panel_detailed': 'true', 'isAllClientDomains': 'false'}],
						'alt_href': canon_href
                    }, on_yq_suggest);
                }
            }
            Yq.onready(my_yq_init);
        });

        function set_image_size(image, width, height) {
            var ratio = (width * 1.0) / height;
            var temp = 0;
            var margin = 0;
            var img = document.getElementById(image);
            var image_width = img.naturalWidth;
            var image_height = img.naturalHeight;
            var image_ratio = (image_width * 1.0) / image_height;

            if (ratio < image_ratio) {
                var temp = image_height / height;
                margin = Math.round((image_width / temp - width) / -2);
                img.style.marginLeft = margin + "px";
                img.style.height = height + "px";
                img.style.width = image_width / temp + "px";
                img.style.maxWidth = image_width / temp + "px";
            }
            else if (ratio > image_ratio) {
                var temp = image_width / width;
                margin = Math.round((image_height / temp - height) * -1);
                img.style.width = width + "px";
                img.style.maxWidth = width + "px";
                img.style.height = image_height / temp + "px";
                img.style.marginBottom = margin + "px";
            }
            else {
                img.style.width = width + "px";
                img.style.height = height + "px";
            }
        }
        
        var yq_profile_id = jQuery.get('http://api.youneeq.ca/app/sessionid', function(data){yq_profile_id = data;});

        function yq_panel_click(rec_link, rec_title, rec_id) {
            var api_url = "http://api.youneeq.ca/api/panelaction";
            var current_url = document.location.href;
            var panel_click_data = {domain_name: document.location.host, user_id: yq_profile_id, recommendation_url: rec_link, recommendation_title: rec_title, recommendation_content_id: rec_id, current_page: current_url};
            var json_data = {'json': JSON.stringify(panel_click_data)};
            var ajax_data = {url: api_url, crossDomain: true, dataType: 'jsonp', data: json_data};
            jQuery.ajax(ajax_data);
        }

