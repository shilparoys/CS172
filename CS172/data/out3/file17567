  });
	$('#tipform').submit(function () { return libercus.ValidateOK; });
	$('.libAjaxSaveButton').button();
	$('#normalsend').click(function (event) {
		event.preventDefault();
		libercus.AjaxFormValidate($('#tipform'), function () {
			$('#tipform').submit();
		});
	});
	$('#ajaxsend').click(function (event) {
		event.preventDefault();
		var dlg = $(this).parents(".ui-dialog-content:first");
		libercus.AjaxFormValidate($('#tipform'), function () {
			libercus.AjaxSubmit($('#tipform'), '/ugchandler/sendtip', function (result) {
				if (result.ResultCode == 1) {
					libercus.MessageDialog("Your e-mail has been sent");
					dlg.dialog('close');
				} else {
					libercus.MessageDialog("Error = " + result.ResultCode);
				}
			});
		});
	});
});
