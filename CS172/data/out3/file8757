            $.validator.addMethod("unnecessary", function(value, element) {
               if(element.type == 'radio') {
                  return $("input[name^=element.name]:checked").length > 0;
               }
               else {
                  return value == '';
               }
            }, "Unnecessary<br\>");

            $.validator.addMethod("static_mail_list", function(value, element) {
