  <script type="text/javascript">
         
         jQuery.ajaxSetup({
            beforeSend: function(xhr) {
               xhr.setRequestHeader("X-PAEMST-Requested-With", "XMLHttpRequest");
            }
         });

         function noErrors() {
            if($(".error").not("#login_error").length == 0) {
               return true;
            }
            else {
               return false;
            }
         }

         function pathConcat(path, qs, nice_urls) {
            var delim = "&amp;";
            if (nice_urls == true) {
               delim = "?";
            }
            return path + delim + qs;
         }

      </script> 
  <script src="/public/js/jquery.countdown.min.js" type="text/javascript"></script> 
  <script type="text/javascript">
         <!--
         var session_start_time = new Date();
         var session_end_time = new Date();
         var session_warning_time = new Date();
         var check_session_time_event;
         var logout_after_close = true;

         //set session time length
         var session_time_length = 7200000;
         //set amount of time prior to session_end_time that warning should appear - 5 minutes
         var warning_time_amount = 300000;

         function start_timer(){
            if($.cookie('LOGGED_IN') == 'true'){
               //reset session times
               session_start_time = new Date();
               session_end_time.setTime(session_start_time.getTime() + session_time_length)
               session_warning_time.setTime(session_end_time.getTime() - warning_time_amount)

               //check session time left every 10 seconds
               check_session_time_event = setInterval("check_session_time()",10000);
            }
         }

         function check_session_time(){
            var current_time = new Date();
            if (current_time < session_end_time && current_time >= session_warning_time){
               //show warning dialog box w/countdown
               $('#countdownMinSec').countdown({until: session_end_time, layout:'<b>{mn} {ml}, {sn} {sl}</b>'});
               $('#dialogWarning').dialog('open');
            }
            if (current_time >= session_end_time){
               //stop checking session time (clear check_session_time_event)
               clearInterval(check_session_time_event);

               //close warning dialog box and stop countdown
               if ($('#dialogWarning').dialog('isOpen')){
                  $('#countdownMinSec').countdown('destroy');
                  $('#dialogWarning').dialog('close');
               }

               //open expired dialog box
               $('#dialogExpired').dialog('open');
            }
         }

         function close_window(logout_after_close) {
            if(logout_after_close == true) {
               window.location="/account/logout";
            }
         }

         function keep_alive() {
            $.ajax({
               url: "/account/keep_alive",
               success: function(data){
                  clearInterval(check_session_time_event);
                  start_timer();
               },
               error: function(){
                  clearInterval(check_session_time_event);
                  $('#dialogError').dialog('open');
               }
            });
         }

         $(document).ready(function(){
            

            $('#dialogError').dialog({
               autoOpen: false,
               height:140,
               width: 400,
               modal: true,
               resizable: false,
               closeOnEscape: false,
               buttons: {
                  'Login': function(){
                     xhrClear();
                     logout_after_close = false; //pair this with following line so that user is not logged out on close
                     $('#dialogError').dialog('close');
                     $('#dialogLogin').dialog('open');
                  },
                  Cancel: function() {
                     close_window(true);
                  }
               },
               close: function() {
                  close_window(logout_after_close)
               },
               open: function() {
                  logout_after_close = true;
               }
            });

            $('#dialogWarning').dialog({
               autoOpen: false,
               height:140,
               width: 400,
               modal: true,
               resizable: false,
               closeOnEscape: false,
               buttons: {
                  'Stay Logged In': function(){
                     $('#countdownMinSec').countdown('destroy')
                     $('#dialogWarning').dialog('close');
                     keep_alive();
                  }
               }
            });

            $('#dialogExpired').dialog({
               autoOpen: false,
               height:140,
               width: 400,
               modal: true,
               resizable: false,
               closeOnEscape: false,
               buttons: {
                  'Login': function(){
                     logout_after_close = false; //pair this with following line so that user is not logged out on close
                     $('#dialogExpired').dialog('close');
                     $('#dialogLogin').dialog('open');
                  },
                  Cancel: function() {
                     close_window(true);
                  }
               },
               close: function() {
                  close_window(logout_after_close)
               },
               open: function() {
                  logout_after_close = true;
               }
            });

            // validate() will not work inside the dialog, so have to keep it separate
            $('#relogin_form').validate({
               errorClass: 'ui-state-error-text',
               rules: {
                  relogin_uname: 'required',
                  relogin_passwd: 'required'
               },
               messages: {
                  relogin_uname: ' Required',
                  relogin_passwd: ' Required'
               },
               errorPlacement: function(error, element) {
                  error.appendTo(element.parent());
               },
               submitHandler: function(form) {
                  $('#relogin_form').ajaxSubmit({
                     dataType: 'json',
                     success: function(xhr) {
                        $('#relogin_form').resetForm();
                        if (xhr.SUCCESS) {
                           xhrSuccess(xhr, xhr.MESSAGE);
                           logout_after_close = false; //pair this with following line so that user is not logged out on close
                           $('#dialogLogin').dialog('close');
                           if (xhr.ADMIN_SESSION == true){
                              window.location = 'https://www.paemst.org/admin_teacher/teachers';
                           }
                           clearInterval(check_session_time_event);
                           start_timer();
                        }
                        else {
                           logout_after_close = true;
                           $('#login_error').html(xhr.MESSAGE).addClass('ui-state-error-text');
                           $('#relogin_uname').focus();
                        }
                     },
                     error: function(){
                        logout_after_close = false; //pair this with following line so that user is not logged out on close
                        $('#dialogLogin').dialog('close');
                        $('#dialogError').dialog('open');
                     }
                  });
               }
            });

            $('#dialogLogin').dialog({
               bgiframe: true,
               autoOpen: false,
               height:200,
               width: 300,
               modal: true,
               closeOnEscape: false,
               buttons: {
                  'Login': function() {
                     $('#login_error').html('');
                     logout_after_close = false;
                     if(!$('#relogin_form').valid()) {
                        logout_after_close = true;
                     }
                     $('#relogin_form').submit();
                  },
                  Cancel: function() {
                     close_window(true);
                  }
               },
               close: function() {
                  close_window(logout_after_close)
               },
               open: function() {
                  logout_after_close = true;
                  $('#relogin_uname').focus();
               }
            });
            start_timer();
         });
         //-->
      </script> 
