     <script language="Javascript">
                function Togglereportsinfographics(theTab) {
                    if (theTab == 'infographics') {
                        $('#midcol_reports').hide();
                        $('#midcol_infographics').show();
                        $('#midcol_reports_button').removeClass('red theSelectedTab').addClass('darkgray theNonSelectedTab');
                        $('#midcol_infographics_button').addClass('red theSelectedTab').removeClass('darkgray theNonSelectedTab');
                    } else {
                        $('#midcol_reports').show();
                        $('#midcol_infographics').hide();
                        $('#midcol_infographics_button').removeClass('red theSelectedTab').addClass('darkgray theNonSelectedTab');
                        $('#midcol_reports_button').addClass('red theSelectedTab').removeClass('darkgray theNonSelectedTab');
                    }
                }
                </script> 
