$(document).ready(function() {
		$('#interact ul li a[title]').bt();
		
		// Define tab behavior.
		$(".tab").click(function() {
				$(".section").hide();
				$(".tab").parent().removeClass("selected");
				var thisSectionID = $(this).attr("id").replace("Tab", "_content");
				//alert(thisSectionID);
				$("#" + thisSectionID).show();
				$(this).parent().addClass("selected");
				return false;
		});
});

