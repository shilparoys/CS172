      <div id="title"> 
       <h1>Publications</h1> 
      </div> 
      <div id="main_row" class="row"> 
       <div class="col-md-3 col-sm-4 fix_fixed no_pad_left"> 
        <div class="hidden-xs"> 
         <!--googleoff: index--> 
         <nav class="default"> 
          <div class="areanav_include areanav_child"> 
           <section class="index_pubs_lang"> 
            <h2 class="index_pubs_lang_header">Publications by Language</h2> 
            <ul class="index_pubs_lang_list"> 
             <li class="index_pubs_lang_list_item"><a href="/health/publications/publications-in-english.shtml">In English</a></li> 
