   <script type="text/javascript">
	$(document).ready(function(){
		var hash = window.location.hash;
		hash = hash.substring(1);

		if(hash != "")
		{
			$("#" + hash).addClass("expanded");

			$("#" + hash).next("div:first").slideToggle('fast');
		}
		$("#accordion h3").click(function(){

			/*if($(this).hasClass("expanded")){
				$(this).next("div").eq(0).slideToggle('fast', null, function(){
					$("html, body").animate({scrollTop: 0}, 'slow');
				});
			}*/

			$(".expanded").removeClass("expanded");
			$(this).toggleClass("expanded");

			if($(this).next("div").eq(0).css("display") != "block"){
				$("#accordion > div").each(function(index, element) {
					$(this).slideUp('fast');
					var img = $(this).prev("h3").find("img").attr("src");

					if(img.indexOf("-on") > -1){
						$(this).prev("h3").find("img").attr("src", "images/accordion-icon-off.png");
					}
				});

				$(this).next("div").eq(0).slideToggle('fast', null, function(){
						$("html, body").animate({scrollTop: $(this).prev("h3").offset().top -50}, 'slow');
				});
			}
			else
			{
				$(this).next("div").eq(0).slideToggle('fast', null, function(){
					$("html, body").animate({scrollTop: 0}, 'slow');
				});
			}
			var img = $(this).children("img").attr("src");

			if(img == "images/accordion-icon-on.png"){
				$(this).find("img").attr({src:"images/accordion-icon-off.png"});
			}
			else{
				$(this).find("img").attr({src:"images/accordion-icon-on.png"});
			}
		});//#accordion h3 click

		$(".sub-accordion a").click(function(){
			$(this).next("ul").slideToggle('fast');
			return false;
		});

		$(".backtotop p a").click(function(){
			$("html, body").animate({scrollTop: 0}, 'slow');
			return false;
		});
	});
</script>   
