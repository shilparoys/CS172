$(function(){
$('#top_nav01 a').click(function(){
if($('#listSpace').hasClass('active') && $('#listSpace').css('left') == '0px'){
$('#listSpace').animate({"top":"185px"},500).removeClass('active');
$('#mask').animate({"height":"0px","top":"185px"},400);
} else if($('#listSpace').hasClass('active') && $('#listSpace').css('left') != '0px'){
//$('#listSpace').animate({"left":"0px"},500);
//$('#mask').animate({"height":"185px","top":"0px"},400);
$('#listSpace').css({"left":"0px"});
$('#mask').css({"height":"185px","top":"0px"});
} else {
$('#listSpace').css('left','0px').animate({"top":"0px"},500).addClass('active');
$('#mask').animate({"height":"185px","top":"0px"},400);
}
});
$('#top_nav02 a').click(function(){
if($('#listSpace').hasClass('active') && ($('#listSpace').css('left') == '-940px' || $('#listSpace').css('left') == '-1880px')){
$('#listSpace').animate({"top":"185px"},500).removeClass('active');
$('#mask').animate({"height":"0px","top":"185px"},400);
} else if($('#listSpace').hasClass('active') && ($('#listSpace').css('left') != '-940px' && $('#listSpace').css('left') != '-1880px')){
//$('#listSpace').animate({"left":"-940px"},500);
//$('#mask').animate({"height":"185px","top":"0px"},400);
$('#listSpace').css({"left":"-940px"});
$('#mask').css({"height":"185px","top":"0px"});
} else {
$('#listSpace').css('left','-940px').animate({"top":"0px"},500).addClass('active');
$('#mask').animate({"height":"185px","top":"0px"},400);
}
});

$('a#goto1').click(function(){
$('#listSpace').animate({"left":"-940px"},500);
});
$('a#goto2').click(function(){
$('#listSpace').animate({"left":"-1880px"},500);
});

//
var _num = $('#pickupspace li').length;
var _current = 0;
$('#pickupspace').css('width', _num * 280 + 'px');

function moveToList(){
$(document).stopTime('timer01');
$('#pickupspace').animate({'left': -(280 * _current) + 'px'}, 500);
changeTimerRight(8000);
}

$('#PrevList').click(function(){
if(_current > 0){
_current--;
} else {
_current = (_num-1);
}
moveToList();
});
$('#NextList').click(function(){
if(_current < (_num-1)){
_current++;
} else {
_current = 0;
}
moveToList();
});

//var _height = $('#pickupspace li:eq('+_current+')').find('div').outerHeight();
//$('#pickupspace li').css('display','none');
//$('#pickupspace li').css('height',_height + 'px');
//$('#pickupspace li:eq('+_current+')').css('display','block');

function changeTimerRight(time){
$(document).everyTime(time,'timer01',function(){
$(document).stopTime('timer01');
if(_current < (_num-1)){
_current++;
moveToList();
//$('#pickupspace li').css('display','none');
//$('#pickupspace li:eq('+_current+')').css('display','block');
//_height = $('#pickupspace li:eq('+_current+')').find('div').outerHeight();
//$('#pickupspace li').animate({'height':_height + 'px'},500)
} else {
_current = 0;
moveToList();
//$('#pickupspace li').css('display','none');
//$('#pickupspace li:eq('+_current+')').css('display','block');
//_height = $('#pickupspace li:eq('+_current+')').find('div').outerHeight();
//$('#pickupspace li').animate({'height':_height + 'px'},500)
}
//changeTimerRight(8000);
});
}
changeTimerRight(8000);

});
</script> 
