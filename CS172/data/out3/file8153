        Event.onDOMReady(function() {        
                Event.observe('legal_type', 'change', function(event){
                    $('legal-questions-form').reset();
                    var selectedValue = event.target.options[event.target.selectedIndex].value;
                    var targetForm = $('legal-questions-form');            
                    var targetUrl = $('form_url');
                    switch (selectedValue) {
                        case 'Copyright Infringement':
                            targetForm.setAttribute('name', 'copyright-infringement-questions');
                            targetUrl.setAttribute('value', 'http://www.apple.com/legal/contact/copyright_infringement.html');
                            break;
                        case 'Copyright':
                            targetForm.setAttribute('name', 'copyright-questions');
                            targetUrl.setAttribute('value', 'http://www.apple.com/legal/contact/copyright_information.html');
                            break;
                        case 'Counterfeit Prevention Hardware':
                            targetForm.setAttribute('name', 'counterfeit-questions');
                            targetUrl.setAttribute('value', 'http://www.apple.com/legal/contact/counterfeit-prevention.html');
                            break;
                        case 'Patent':
                            targetForm.setAttribute('name', 'patent-questions');
                            targetUrl.setAttribute('value', 'http://www.apple.com/legal/contact/patent.html');
                            break;
                        case 'Phishing and Spam':
                            targetForm.setAttribute('name', 'phishingandspam-questions');
                            targetUrl.setAttribute('value', 'http://www.apple.com/legal/contact/phishingandspam.html');
                            break;
                        case 'Piracy':
                            targetForm.setAttribute('name', 'piracy-questions');
                            targetUrl.setAttribute('value', 'http://www.apple.com/legal/contact/piracy.html');
                            break;
                        case 'Apple Trademark':
                            targetForm.setAttribute('name', 'apple-trademark-questions');
                            targetUrl.setAttribute('value', 'http://www.apple.com/legal/contact/trademark_information.html');
                            break;
                        case 'Idea Submissions':
                            targetForm.setAttribute('name', 'idea-submissions-questions');
                            targetUrl.setAttribute('value', 'http://www.apple.com/legal/contact/idea-submissions.html');
                            break;
                        default:
                            targetForm.setAttribute('name', '');
                            break;
                    }
                });
                Event.observe('legal-questions-form', 'submit', function(event) {
                    var selectedValue = $('legal_type').options[$('legal_type').selectedIndex].value;
                    var targetCustomerName = $('customer_name');
                    var targetCustomerEmail = $('customer_email');
                    var targetThankyou = $('thankyou');
                    var targetSubject = $('subject');
                    var targetComment = $('feedback_comment');
                    var targetType = $('feedback_type');
                    var targetFormId = $('formId');
                        switch (selectedValue) {
                        case 'Copyright Infringement':
                            targetFormId.setAttribute('value', '229');
                            targetCustomerName.setAttribute('value', $F('first_name_copyrightagent')+' ' +$F('last_name_copyrightagent'));
                            targetThankyou.setAttribute('value', 'http://www.apple.com/legal/contact/copyrightInfringementthankyou.html');
                            targetCustomerEmail.setAttribute('value', $F('email_copyrightagent'));
                            targetSubject.setAttribute('value', 'Apple - Legal - Claims Of Copyright');
                            targetComment.setAttribute('value', 'Apple - Legal - Claims Of Copyright - Customer Questions');
                            targetType.setAttribute('value', 'Apple - Legal - Claims Of Copyright');
                            break;
                        case 'Copyright':
                            targetFormId.setAttribute('value', '230');                        
                            targetCustomerName.setAttribute('value', $F('first_name_copyright')+' ' +$F('last_name_copyright'));
                            targetThankyou.setAttribute('value', 'http://www.apple.com/legal/contact/copyrightthankyou.html');
                            targetCustomerEmail.setAttribute('value', $F('email_copyright'));
                            targetSubject.setAttribute('value', 'Apple - Legal Copyright Information');
                            targetComment.setAttribute('value', 'Apple - Legal Copyright Information - Customer Questions');
                            targetType.setAttribute('value', 'Apple - Legal Copyright Information');
                            break;
                        case 'Counterfeit Prevention Hardware':
                            targetFormId.setAttribute('value', '241');                        
                            targetCustomerName.setAttribute('value', $F('name_counterfeit'));
                            targetThankyou.setAttribute('value', emailCheck('email_counterfeit'));
                            targetCustomerEmail.setAttribute('value', $F('email_counterfeit'));
                            targetSubject.setAttribute('value', 'Apple - Legal - Counterfeits & KnockOffs');
                            targetComment.setAttribute('value', 'Apple - Legal - Counterfeits & KnockOffs - Customer Questions');
                            targetType.setAttribute('value', 'Apple - Legal - Counterfeits & KnockOffs');
                            break;
                        case 'Patent':
                            targetFormId.setAttribute('value', '242');                        
                            targetCustomerName.setAttribute('value', $F('first_name_patent')+' ' +$F('last_name_patent'));
                            targetThankyou.setAttribute('value', 'http://www.apple.com/legal/contact/patentthankyou.html');
                            targetCustomerEmail.setAttribute('value', $F('email_patent'));
                            targetSubject.setAttribute('value', 'Apple - Legal - Patent Issues');
                            targetComment.setAttribute('value', 'Apple - Legal - Patent - Customer Issues');
                            targetType.setAttribute('value', 'Apple - Legal - Patent Issues');
                            break;
                        case 'Piracy':
                            targetFormId.setAttribute('value', '232');                        
                            targetCustomerName.setAttribute('value', $F('first_name_piracy')+' ' +$F('last_name_piracy'));
                            targetThankyou.setAttribute('value', 'http://www.apple.com/legal/contact/piracythankyou.html');
                            targetCustomerEmail.setAttribute('value', $F('email_piracy'));
                            targetSubject.setAttribute('value', 'Apple - Legal - Piracy');
                            targetComment.setAttribute('value', 'Apple - Legal - Piracy - Customer Questions');
                            targetType.setAttribute('value', 'Apple - Legal - Piracy');
                            break;
                        case 'Apple Trademark':
                            targetFormId.setAttribute('value', '231');                        
                            targetCustomerName.setAttribute('value', $F('first_name_trademark')+' ' +$F('last_name_trademark'));
                            targetThankyou.setAttribute('value', 'http://www.apple.com/legal/contact/trademarkthankyou.html');
                            targetCustomerEmail.setAttribute('value', $F('email_trademark'));
                            targetSubject.setAttribute('value', 'Apple - Legal - Trademark Information');
                            targetComment.setAttribute('value', 'Apple - Legal - Trademark Information - Customer Questions');
                            targetType.setAttribute('value', 'Apple - Legal - Trademark Information');
                            break;
                        case 'Idea Submissions':
                            targetFormId.setAttribute('value', '245');                        
                            targetCustomerName.setAttribute('value', $F('first_name_idea_submissions')+' ' +$F('last_name_idea_submissions'));
                            targetThankyou.setAttribute('value', 'http://www.apple.com/legal/contact/ideathankyou.html');
                            targetCustomerEmail.setAttribute('value', $F('email_idea_submissions'));
                            targetSubject.setAttribute('value', 'Apple - Legal - Idea Submissions');
                            targetComment.setAttribute('value', 'Apple - Legal - Idea Submissions Information - Customer Questions');
                            targetType.setAttribute('value', 'Apple - Legal - Idea Submissions Information');
                            break;
                        default:
                            targetThankyou.setAttribute('value', 'http://www.apple.com/legal/contact/');
                            break;
                    }
                    return true;
                });
            });
        /* When Counterfeits and Knockoffs is selected, on submit, this will parse the value entered for the email address and set the thank you URL according to Apple internal and external email origination source. */
         var emailCheck = function(elemid) {
            var address = document.getElementById(elemid).value;
            if(address.indexOf('apple.com') > 0)    {
                return("http://www.apple.com/legal/contact/counterfeitthankyou.html");
            }else  {
                return("http://www.apple.com/legal/contact/counterfeitformthankyou.html");
            } 
        };
    </script> 
