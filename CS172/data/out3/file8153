           <li> <label for="street_address_copyrightagent">Street Address</label> <span class="formwrap"> <input type="text" id="street_address_copyrightagent" name="street_address_copyrightagent" maxlength="50" class="required"> <i>Required</i> </span> </li> 
           <li> <label for="city_copyrightagent">City</label> <span class="formwrap"> <input type="text" id="city_copyrightagent" name="city_copyrightagent" maxlength="50" class="required"> <i>Required</i> </span> </li> 
           <li> <label for="state_copyrightagent">State/Province</label> <span class="formwrap"> <input type="text" id="state_copyrightagent" name="state_copyrightagent" maxlength="50" class="required"> <i>Required</i> </span> </li> 
           <li> <label for="zip_copyrightagent">Zip/Postal Code</label> <span class="formwrap"> <input type="text" id="zip_copyrightagent" name="zip_copyrightagent" maxlength="11" class="required validate-zipcode"> <i>Required</i> </span> </li> 
           <li> <label for="country_copyrightagent">Country</label> <span class="formwrap"> <input type="text" id="country_copyrightagent" name="country_copyrightagent" maxlength="50" class="required"> <i>Required</i> </span> </li> 
           <li> <label for="phone_copyrightagent">Phone Number</label> <span class="formwrap"> <input type="text" id="phone_copyrightagent" name="phone_copyrightagent" maxlength="12" class="required validate-phone-number"> <i>Required</i> </span> </li> 
           <li> <label for="mobile_copyrightagent">Mobile Number</label> <span class="formwrap"> <input type="text" id="mobile_copyrightagent" maxlength="12" name="mobile_copyrightagent"> </span> </li> 
           <li> <label for="email_copyrightagent">Email Address</label> <span class="formwrap"> <input type="text" id="email_copyrightagent" name="email_copyrightagent" maxlength="100" class="required validate-email-copyrightagent"> <i>Required</i> </span> </li> 
