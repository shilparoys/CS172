  <script type="text/javascript">
		var RecaptchaOptions = {
			theme : 'clean',
			lang : 'es' 

		};
		
		function radioClicked(event) {
			var element = Event.element(event);
			var elementId = element.identify();
			var item = elementId.split('_').pop();
			if (element.checked) {
				activateTextfields(item);				
			} else {
				if ('login' == item) {
					activateTextfields('mail');
				} else {
					activateTextfields('login');
				}
			}
		}
		
		function activateTextfields(item) {
			$('captcha_' + item).enable();
			$('captcha_' + item).removeClassName('inactiu');
			if ('login' == item) {
				$('captcha_mail').clear();
				$('captcha_mail').disable();
				$('captcha_mail').addClassName('inactiu');
			} else {
				$('captcha_login').clear();
				$('captcha_login').disable();				
				$('captcha_login').addClassName('inactiu');
			}
		};
		
		Event.observe(window, "load", function() {
			// set radio 
			var item = '';
			if ('' != item) {
				$('captcha_method_' + item).checked = true;
				activateTextfields(item);				
			}
			$('captcha_method_login').observe('change', radioClicked);
			$('captcha_method_mail').observe('change', radioClicked);
		});
	</script> 
