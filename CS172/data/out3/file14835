     <!-- <style>
  tt { color: #555; margin:5px; font-size:10px; background-color: #FFFFE0; }
</style>

<p><tt id="results"></tt></p>

<script>
    function showValues() {
      var str = $("#inputForm").serialize();
      $("#results").text(str);
    }
    $(":checkbox, :radio").click(showValues);
    $("select").change(showValues);
    $("text").blur(showValues);
