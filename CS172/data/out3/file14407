  if(top.logobar==null) {
    ns = top.window.name.substring(0,128);
  }
  else {
    ns = top.logobar.document.IDs.session.value;
  }  
  
  url='http://cv.uoc.es/UOC/a/extcgi_0.html?s='+ns+'&img=hola&cgi=hola';
  if (self.parent.frames.length != 0)
  self.parent.location=url;
}
