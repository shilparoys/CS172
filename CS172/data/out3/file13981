	});

	$("#international-map-trigger").click(function () {
		$("#international-map").lightbox_me({
			modalCSS: {
				bottom: 105
			},
			overlayCSS: {
				background: 'rgb(0,0,0)', 
				opacity: .86
			},
			onLoad: function () {
				$("#international-map").animate(
					{ transform: "scale(1)" }, 
					500,
					function () {
						$("#international-map a").each(function (i) {
							$(this)
								.delay((i++) * 250)
								.animate(
									{opacity: 1}, 
									250
								);
						});
					}
				);
			},
			onClose: function () {
				$("#international-map").css({
					transform: "scale(3.25)"
				});

				$("#international-map a").each(function () {
					$(this).css({opacity: 0});
				});
			}
		});

		return false;
	});

