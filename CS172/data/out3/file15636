  <script type="text/javascript">
            jQuery(document).ready(function() {
                jQuery("ul.topnav li.top-level").hover(function() { //Hover over event on list item
                    jQuery("ul.topnav li.top-level").css({ 'background' : 'none'}).find("span").hide();
                    jQuery(this).css({ 'background' : 'url(/sites/all/themes/slt/images/topnav.png) no-repeat bottom left'}); //Add background color + image on hovered list item
                    jQuery(this).find("span").show(); //Show the subnav
                } , function() { //on hover out...
                    jQuery(this).css({ 'background' : 'none'}); //Ditch the background
                    jQuery(this).find("span").hide(); //Hide the subnav
                    if(window.location == "http://www.slt.lk/"){
                        jQuery("ul.topnav li.top-level:first").css({ 'background' : 'url(/sites/all/themes/slt/images/topnav.png) no-repeat bottom left'}); //Add background color + image on hovered list item
                        jQuery("ul.topnav li.top-level:first span").show();
                    } else {
                        var menuDisplayed = false;
                        jQuery("ul.topnav li.top-level li a").each(function(){
        
                            if(window.location.toString().indexOf(jQuery(this).attr('href')) > -1 && jQuery(this).attr('href') != "/") {
                                jQuery(this).parent().parent().parent().parent().css({ 'background' : 'url(/sites/all/themes/slt/images/topnav.png) no-repeat bottom left'}); //Add background color + image on hovered list item
                                jQuery(this).parent().parent().parent().parent().find("span").show();
                                menuDisplayed = true;
                            }
         // if(pathname == "/e-teleshop/product-category/broadband-cpes"){                     
         //  jQuery(".topnav span").eq(0).hide();
          // jQuery(".topnav .top-level").eq(0).css({'background-image':'none'});
         // }
        var pathname = window.location.pathname;
       if(pathname == "/e-teleshop/product-category/broadband-cpes"){  
        jQuery(".topnav span").eq(0).hide();
        jQuery(".topnav .top-level").eq(0).css({'background-image':'none'});    
       }
            
                        });
                        if(!menuDisplayed) {
                        jQuery("ul.topnav li.top-level").each(function(){
                                   
                            if(window.location.toString().indexOf(jQuery(this).find('a:first').attr('href')) > -1 && jQuery(this).find('a:first').attr('href') != "/") {
                                jQuery(this).css({ 'background' : 'url(/sites/all/themes/slt/images/topnav.png) no-repeat bottom left'}); //Add background color + image on hovered list item
                                jQuery(this).find("span").show();
                                menuDisplayed = true;
                            }
                        });
                        }
                        
                        if(!menuDisplayed) {
                            jQuery("ul.topnav li.top-level:first").css({ 'background' : 'url(/sites/all/themes/slt/images/topnav.png) no-repeat bottom left'}); //Add background color + image on hovered list item
                            jQuery("ul.topnav li.top-level:first span").show();
                        }
                    }
                });
                var pathArray = window.location.pathname.toString().replace("/",'').split("/")
                var primePath = [pathArray[0], pathArray[1]];
				
				// training center (harsha)....
					if(pathArray[0]=="training-center"||pathArray[0]=="training-test123" ||pathArray[0]=="ttc"){
						var primePath = [pathArray[0], pathArray[1],pathArray[2]];
						
							jQuery('#menu li ul').each(function() {
							 jQuery('li:gt(5)', this).css("opacity", "0");
							 
							 jQuery('ul.topnav li a').css('width','145px');
							 
							 jQuery('.leftmenu-subhead .sub-icon').html('<img src="/sites/all/themes/slt/images/icon-training-section.png" width="30px" height="30px">');
							 
							} );
						if(pathArray[0]=="ttc"){
							jQuery('#inner-top-main h2').remove('h2');
							jQuery('#inner-top-main').html('<span class="ttc-class" style="color: #182F6B; font: 17px Arial,Helvetica,sans-serif;">Life@TTC</span>');
						}
						//jQuery('.page-titlearea ul.breadcrumb li').first().html('<a href="http://www.slt.lk/training"> Home </a>');
					}
					 // ....
				
				
                var primePathName = "/"+primePath.join("/");
                jQuery(".topnav a[href='"+primePathName+"']").css({
                                                                            'color': '#008AFF',
                                                                            'text-decoration': 'none'
                });
                if(jQuery("div.leftmenu-head").length >0){
                    jQuery("div.leftmenu-head").html(jQuery(".topnav a[href='"+primePathName+"']").html());
                    if(jQuery("div.leftmenu-head").html().length > 23){
                        jQuery("div.leftmenu-head").css({
                            'font-size' : '11px'        
                        });
                    }
                    if(window.location.pathname.toString().indexOf('about-us') != -1){
                        jQuery("div.leftmenu-head").html('About Us')
                    }
                    if(window.location.pathname.toString().indexOf('contact-us') != -1){
                        jQuery("div.leftmenu-head").html('Contact Us')
                    }
                    if(window.location.pathname.toString().indexOf('e-teleshop') != -1){
                        jQuery("div.leftmenu-head").html('eTeleshop')
                    }
                } 
                
                
                if(window.location == "http://www.slt.lk/"){
                
                    jQuery("ul.topnav li.top-level:first").css({ 'background' : 'url(/sites/all/themes/slt/images/topnav.png) no-repeat bottom left'}); //Add background color + image on hovered list item
                    jQuery("ul.topnav li.top-level:first span").show(function(){
                            var section_header = jQuery(this).parent().find('a:first').html();
                            jQuery('#inner-top-main h2').html(section_header);
                        });
                    
                } else {
                    var menuDisplayed = false;
                    jQuery("ul.topnav li.top-level li a").each(function(){
                        if(window.location.toString().indexOf(jQuery(this).attr('href')) > -1 && jQuery(this).attr('href') != "/") {
                            jQuery(this).parent().parent().parent().parent().css({ 'background' : 'url(/sites/all/themes/slt/images/topnav.png) no-repeat bottom left'}); //Add background color + image on hovered list item
                            jQuery(this).parent().parent().parent().parent().find("span").show(function(){
                            var section_header = jQuery(this).parent().find('a:first').html();
                            jQuery('#inner-top-main h2').html(section_header);
                        });
                            menuDisplayed = true;
                        }
                    });
                    if(!menuDisplayed) {
                        jQuery("ul.topnav li.top-level").each(function(){
                            if(window.location.toString().indexOf(jQuery(this).find('a:first').attr('href')) > -1 && jQuery(this).find('a:first').attr('href') != "/") {
                                jQuery(this).css({ 'background' : 'url(/sites/all/themes/slt/images/topnav.png) no-repeat bottom left'}); //Add background color + image on hovered list item
                                jQuery(this).find("span").show(function(){
                                var section_header = jQuery(this).siblings('a:first').html();
                                jQuery('#inner-top-main h2').html(section_header);
                            });
                                menuDisplayed = true;
                            }
                        });
                    }
                    
                    if(!menuDisplayed) {
                        jQuery("ul.topnav li.top-level:first").css({ 'background' : 'url(/sites/all/themes/slt/images/topnav.png) no-repeat bottom left'}); //Add background color + image on hovered list item
                        jQuery("ul.topnav li.top-level:first span").show(function(){
                            var section_header = jQuery(this).parent().find('a:first').html();
                            if(window.location.pathname.toString().indexOf('about-us') != -1) {
                                jQuery('#inner-top-main h2').html('About Us');
                            } else if(window.location.pathname.toString().indexOf('contact-us') != -1) {
                                jQuery('#inner-top-main h2').html('Contact Us');
                            }else if(window.location.pathname.toString().indexOf('terms-conditions') != -1) {
                                jQuery('#inner-top-main h2').html('Terms & Conditions');
                            }
                            else if(window.location.pathname.toString().indexOf('content') != -1) {
                                jQuery('#inner-top-main h2').html('');
                            }
                             else {
                                jQuery('#inner-top-main h2').html(section_header);
                            }
                            
                        });
                    }
                }
                
                BackToTop({
                text : '',
                autoShow : true,
                timeEffect : 500,
                appearMethod : 'fade',
                effectScroll : 'linear' /** all effects http://jqueryui.com/docs/effect/#easing */
                });
                
            });
