     <script language="JavaScript1.2">
function poponload(){
 	var width  = 195;
 	var height = 220;
 	var left   = (screen.width  - width)/2;
 	var top    = (screen.height - height)/2;
 	var params = "top="+top+", left="+left;
	testwindow= window.open ("http://forms.westmont.edu/weboffice/prototype/donation/cvc.php", "mywindow",
    	"location=no,title=no,status=no,scrollbars=no,toolbar=no,menubar=no,width=195,height=220");
	testwindow.moveTo(left,top);
}
</script> 
     <script type="text/javascript">
	function calculateTotalCost(){
		var adultCost = 15;
		var childCost = 5;
		var saturday_afternoon_cost = 15;
		var totalCharge = 'Select a ticket number above';
		
		var friday_adult=0;
		if(document.form1.friday_adult!=null) friday_adult = document.form1.friday_adult.value;
		
		var friday_children=0;
		if(document.form1.friday_children!=null) friday_children = document.form1.friday_children.value;

		var saturday_afternoon=0;
		if(document.form1.saturday_afternoon!=null) saturday_afternoon = document.form1.saturday_afternoon.value;


		var saturday_adult=0;
		if(document.form1.saturday_adult!=null) saturday_adult = document.form1.saturday_adult.value;

		var saturday_children=0;
		if(document.form1.saturday_children!=null) saturday_children = document.form1.saturday_children.value;

		var sunday_adult=0;
		if(document.form1.sunday_adult!=null) sunday_adult = document.form1.sunday_adult.value;

		var sunday_children=0;
		if(document.form1.sunday_children!=null) sunday_children = document.form1.sunday_children.value;
		
		var donation = document.form1.donation.value;
		
		totalCharge = saturday_afternoon*saturday_afternoon_cost+friday_adult*adultCost+friday_children*childCost+saturday_adult*adultCost+saturday_children*childCost+sunday_adult*adultCost+sunday_children*childCost+donation*1;
		
		loadTextInToElement(totalCharge, "total_charge");
	}

	function loadTextInToElement(fragment_text, element_id) {
 		var element = document.getElementById(element_id);
		element.innerHTML = fragment_text;
	}
</script> 
     <script type="text/javascript">
	function makeSubmitEnabled(){
		document.getElementById('submit_form').disabled='';
	}
</script> 
