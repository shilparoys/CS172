        $(document).ready(function ()
        {
            // show sharing toolbar only if browser is wide enough
            if ($(window).width() >= 1225)
            {
                $('#sharing').css('left', $('#container').position().left + 1050 + 'px');
                $('#sharing').show();
            }

            // update when user resizes browser
            $(window).resize(function ()
            {
                if ($(window).width() >= 1225)
                {
                    $('#sharing').css('left', $('#container').position().left + 1050 + 'px');
                    $('#sharing').show();
                }
                else
                {
                    $('#sharing').hide();
                }
            });
        });

