  <script type="text/javascript">
		function setAccordianPosition(){
			var path = "/" + location.pathname.substring(1);
						
			/*if(path == "/gis/research-centers/")
			{
				$(".currentAccordion").removeClass("currentAccordion");
				$(".currentLi").removeClass("currentLi");
			}*/
			
			if($(".currentLi").length)
			{
				$("#accordion").accordion({active:true});
				console.log(0);
			}
			else
			{
				$("#accordion").accordion({active:true});
				$(".currentAccordion").removeClass("currentAccordion");
				$(".currentLi").removeClass("currentLi");
				$('#accordion div ul li a[href$="' + path + '"]').attr('class', 'currentLink');
				var arrowImg = $('<img src="images/active-bluearrow.png" alt="Blue Arrow" class="BlueArrow" />').insertBefore($(".currentLink"));
			}
		}
		
		function setContactLocation() {
			var accordionHeight = $("#accordion").height();
			var leftColumnHeight = $("#LeftColumnContent").height();
			var contact = $('.ContactInfo');
			var height = leftColumnHeight - accordionHeight + 225;
			if(height < 0)
			{
				contact.css({"padding-top":"-15px"});	
			}
			else
			{
				contact.css({"padding-top":height});
			}
		}

		$(document).ready(function(){
				setContactLocation();
				$("#accordion").accordion({autoHeight:false, navigation:true, active:false});
				setAccordianPosition();
		
				$('#back-to-top').click(function(){
					window.scrollTo(0,0);
					return false;
				});
				$("ul#ticker01").liScroll();
				});
	</script> 
