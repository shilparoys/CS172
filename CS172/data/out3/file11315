						autoplayDelay: 3000,
						autoplayStopAtAction: true,
						keyboardNav: false,
						dragUsingMouse: true,
						transitionSpeed: 400,
						itemFallbackWidth: 300,
						onAnimComplete: tclazyload,
						onDragRelease: tclazyload,
					}).data('touchCarousel');;
					
					centersliders('thefacts', 'section');
				
